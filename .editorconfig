root = true

# All files
[*]
charset = utf-8
end_of_line = crlf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
end_of_line = crlf
indent_style = space
indent_size = 2

# Make sure we don't mess with our sln
[*.*sln]
charset = utf-8-bom

# msbuild and xml
[*.{*proj,props,targets,ruleset,xml,config,Config}]
end_of_line = crlf
indent_style = space
indent_size = 2
insert_final_newline = false
